<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("../partials/header.ejs",{title:"HomePage"}) %> 
    
</head>
<body>

  <div class="container-fluid  mt-2">
    <div class="row">
      <div class="col-md-6  bg-danger rounded-2">
        <h1 class="text-center container-fluid w-100 bg-warning rounded-3 mt-2 ">Fill this Form</h1>
        <form action="/" method="POST">
          <div class="form-group">
            <label for="">Name</label>
            <input type="text"
              class="form-control" name="name" id="name" aria-describedby="helpId" placeholder="Name">
          </div>
         
          <div class="form-group">
             <label for="">Email</label>
             <input type="email"
               class="form-control" name="email" id="email" aria-describedby="helpId" placeholder="Email">
           </div>
         
           
           <div class="form-group">
             <label for="">age</label>
             <input type="number"
               class="form-control " name="age" id="age" min="10" max="111" aria-describedby="helpId" placeholder="Age">
           </div>
         
           <button type="submit" class="btn btn-success m-3 text-dark ">Submit</button>
         
         
         </form>

      </div>
      <div class="col-md-6 rounded-2 bg-danger ">
        <h1 class="text-center bg-warning rounded-3 mt-2">Your Details</h1>
        
<div class="container1">

  <table  class="table table-striped table-dark table-hover border rounded-2">

  <thead>
    <tr>
      <th>S.N</th>
      <th>name</th>
      <th>Email</th>
      <th>age</th>
      <th>Update/Delete</th>
    </tr>

  </thead>

  <tbody>


    <% result.forEach(item => { %>

      <tr class="table-success">
        <td><%= i++%></td>
        <td><%= item.name%></td>
        <td><%= item.email%></td>
        <td><%= item.age%></td>
        <td>
          <div class="containerButton d-flex">

          <form action="/edit/<%= item.id%>" method="GET">
            
          <button class="btn">
            <i class="fas fa-edit cursor-pointer text-primary"></i>
          </button>
        </form>
          /
          <form action="/delete/<%= item.id%>" method="POST">
            
            <button class="btn">
              <i class="fas fa-trash-alt cursor-pointer text-danger"></i>
            </button>
          </form>
        </div>

          
          
          
        </td>
      </tr>

     
    <% }) %>
   


   

  </tbody>
</table>

</div>

      </div>
    </div>


    


</div>

    <hr>
   

    
</body>
</html>